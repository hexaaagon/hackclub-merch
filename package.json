{
  "name": "hackclub-merch",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "db:generate": "turbo run -F './packages/drizzle' db:generate",
    "db:generate:auth": "turbo run -F './packages/drizzle' db:generate:auth",
    "db:generate:migrations": "turbo run -F './packages/drizzle' db:generate:migrations",
    "db:migrate": "turbo run -F './packages/drizzle' db:migrate",
    "db:drop": "turbo run -F './packages/drizzle' db:drop",
    "db:pull": "turbo run -F './packages/drizzle' db:pull",
    "db:push": "turbo run -F './packages/drizzle' db:push",
    "db:studio": "turbo run -F './packages/drizzle' db:studio",
    "db:check": "turbo run -F './packages/drizzle' db:check",

    "ngrok:hexaa": "cmd . /k ngrok http --url=supreme-kodiak-stable.ngrok-free.app 3000",
    "preinstall": "npx only-allow bun",
    "postinstall": "turbo run postinstall"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@biomejs/biome": "2.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
