{
  "name": "@merch/drizzle",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "db:generate": "bun run db:generate:auth && bun run db:generate:migrations",
    "db:generate:auth": "bunx @better-auth/cli generate --config ../auth/src/index.ts --output ./src/schema/auth.ts -y",
    "db:generate:migrations": "drizzle-kit generate",
    "db:migrate": "bun src/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:pull": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check"
  },
  "dependencies": {
    "@merch/types": "workspace:*",
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "better-auth": "^1.3.32",
    "kysely": "^0.27.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
